<% viewer_id ||= (defined?(current_user) && current_user&.id) %>
<% if message.user_id == viewer_id %>
  <div class="row mx-2 justify-content-center">
    <div class="msg msg-right col-10">
      <p><%= message.contents %></p>
    </div>
    <div class="col-2">
      <%= image_tag message.chat.pet.photo,
          class: "avatar-chat right-avatar" %>
    </div>
  </div>
<% else %>
  <div class="row mx-2 justify-content-center">
    <div class="col-2">
      <%= image_tag "https://res.cloudinary.com/rts1307/image/upload/v1771606859/development/gregoryhouse.jpg",
          class: "avatar-chat left-avatar" %>
    </div>
    <div class="msg msg-left col-10">
      <p><%= message.contents %></p>
    </div>
  </div>
<% end %>
