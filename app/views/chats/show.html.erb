<div class="container mt-4 pt-5">
  <h2>Chat about: <%= @chat.pet.name %></h2>
  <div>
    <% @messages.each do |message| %>
      <% if message.user == @user %>
        <div class="row mx-2 justify-content-center">
          <div class="msg msg-right col-10">
            <p>
              <%= message.contents %>
            </p>
          </div>
          <div class="col-2">
            <%= image_tag @chat.pet.photo,
              class: "avatar-small right-avatar",
              style: "width: 50px; height: 50px; border-radius: 50%; object-fit: cover;" %>
          </div>
        </div>
      <% else %>
        <div class="row mx-2 justify-content-center">
          <div class="col-2">
            <%# Image placeholder %>
            <%= image_tag "https://res.cloudinary.com/rts1307/image/upload/v1771606859/development/gregoryhouse.jpg",
              class: "avatar-small left-avatar", style: "width: 50px; height: 50px; border-radius: 50%; object-fit: cover;" %>
          </div>
          <div class="msg msg-left col-10">
            <p>
              <%= message.contents %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<hr>
<%= form_with model: [@user, @chat, @message] do |f| %>
  <%= f.text_area :contents %>
  <%= f.submit "Send" %>
<% end %>
</div>
</div>
<style>
  .msg-wrapper {
    position: relative;
    max-width: 70%;
  }

  .msg {
    position: relative;
    border-radius: 8px;
    font-size: 14px;
    line-height: 1.4;
    max-width: 70%;
    padding: 12px 18px;
    margin-bottom: 10px;
    z-index: 1;
    font-weight: bold;
  }

  .msg-right {
    background: #6aa98f;
  }

  .msg-right::after {
    content: "";
    position: absolute;
    right: -5px;            /* move outside bubble */
    top: 50%;               /* vertical center */
    transform: translateY(-50%) rotate(150deg);
    width: 12px;
    height: 12px;
    background: #6aa98f;
    border-radius: 0 100% 100% 100%;
    z-index: -1;
  }

  .msg-left {
    background: #A3B899;
  }

  .msg-left::after{
    content: "";
    position: absolute;
    left: -5px;            /* move outside bubble */
    top: 50%;               /* vertical center */
    transform: translateY(-50%) rotate(330deg);
    width: 12px;
    height: 12px;
    background: #A3B899;
    border-radius: 0 100% 100% 100%;
  }

  .right-avatar{
    margin-left: 0.75rem;
  }

  .left-avatar{
    margin-right: 0.75rem;
  }

  p {
    margin-bottom: 0;
  }

  .col-2:has(.left-avatar),
  .col-2:has(.right-avatar) {
    padding-left: 0;
    padding-right: 0;
  }
</style>
