<div class="pet-index-container">
  <h3 class="d-flex justify-content-center align-items-center mt-4">Your Pets!</h3>
  <% @pets.each do |pet| %>
    <div class="card card-index w-100 mb-3 p-3 mt-3">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div class="avatar-section">
          <% if pet.photo.attached? %>
            <%= image_tag pet.photo, class: "avatar-large", style: "width: 100px; height: 100px; border-radius: 50%; object-fit: cover;" %>
          <% else %>
            <i class="fa-solid fa-paw" style="font-size: 80px; color: rgba(255,255,255,0.5);"></i>
          <% end %>
        </div>
        <div class="name-section">
          <h2 class="mb-0"><%= link_to pet.name, user_pet_path(current_user, pet) %></h2>
        </div>
        <div class="action-section">
          <ul class="list-inline mb-0">
            <li class="list-inline-item">
              <%= link_to new_user_pet_log_path(current_user, pet) do %>
                <h3><i class="fa-solid fa-calendar-plus"></i></h3>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
  <h3 class="d-flex justify-content-center align-items-center mt-5">Your Connected Veterinarians</h3>
  <div class="card card-index w-100 p-3 mt-3 mb-5">
    <div class="card-body d-flex justify-content-between align-items-center">
      <div class="avatar-section">
        <%= image_tag "https://res.cloudinary.com/rts1307/image/upload/v1771606859/development/gregoryhouse.jpg",
              class: "avatar-large", style: "width: 100px; height: 100px; border-radius: 50%; object-fit: cover;" %>
      </div>
      <div class="name-section">
        <h2 class="mb-0">Patrick Gregory House</h2>
        <p class="mb-0" style="font-size: 0.9rem; opacity: 0.9;">Languages: English, Spanish</p>
      </div>
      <div class="action-section">
        <h3><i class="fa-solid fa-comment"></i></h3>
      </div>
    </div>
  </div>
</div>
