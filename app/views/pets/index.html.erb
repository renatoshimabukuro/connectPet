<div class="container">
  <h1>Pets#index</h1>
  <p>Find me in app/views/pets/index.html.erb</p>
  <% @pets.each do |pet| %>
    <h2><%= link_to pet.name, user_pet_path(current_user, pet) %></h2>
  <div class="avatar-main">
    <% if pet.photo.attached? %>
      <%= image_tag pet.photo, crop: :fill %>
    <% else %>
      <i class="fa-solid fa-paw" style="font-size: 3rem; color: #D1D8D0;"></i>
    <% end %>
  </div>
  <% end %>
</div>
