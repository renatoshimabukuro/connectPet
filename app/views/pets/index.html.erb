<div class="container">
  <h1>My pets</h1>

  <%# Pets %>
  <% @pets.each do |pet| %>
    <div class="card w-100 mb-30 p-3 mt-3">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div class="avatar-main">
          <% if pet.photo.attached? %>
            <%= image_tag pet.photo, class:"avatar-large", style: "width: 100px; height: 100px" %>
          <% else %>
            <i class="fa-solid fa-paw" style="font-size: 100px; color: #D1D8D0;"></i>
          <% end %>
        </div>
        <div>
          <h2><%= link_to pet.name, user_pet_path(current_user, pet) %></h2>
        </div>
        <div>
          <ul class="list-inline">
            <li class="list-inline-item">
              <h3><i class="fa-duotone fa-solid fa-calendar-plus"></i></h3>
            </li>
            <li class="list-inline-item">
              <h3><i class="fa-duotone fa-solid fa-calendar-plus"></i></h3>
            </li>
          </ul>
        </div>
      </div>
    </div>
  <% end %>


  <%# Vet provisory%>
  <h1 class="mt-5">Your connected Veterinarians</h1>
    <div class="card w-100 mb-30 p-3 mt-3 mb-3">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div class="avatar-main">
          <%= image_tag "https://res.cloudinary.com/rts1307/image/upload/v1771606859/development/gregoryhouse.jpg",
              class:"avatar-large", style: "width: 100px; height: 100px;" %>
        </div>
        <div>
          <h2>Patrick Gregory House</h2>
          <p>Languages: English, Spanish</p>
          <p>Phone: 123456789</p>
          <p>Address: 123-4567 Tokyo, Meguro Higashi-Meguro 1-2-3</p>
        </div>
        <div>
          <ul class="list-inline">
            <li class="list-inline-item">
              <h3><i class="fa-duotone fa-solid fa-calendar-plus"></i></h3>
            </li>
            <li class="list-inline-item">
              <h3><i class="fa-duotone fa-solid fa-calendar-plus"></i></h3>
            </li>
          </ul>
        </div>
    </div>
</div>
