<div class="pet-index-container">
  <h3 class="d-flex justify-content-center align-items-center mt-4">Forever Loved</h3>

  <% if @archived_pets.any? %>
    <% @archived_pets.each do |pet| %>
      <div class="card card-index w-100 mb-3 p-3 mt-3">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div class="avatar-section">
            <% if pet.photo.attached? %>
              <%= image_tag pet.photo, class: "avatar-large", style: "width: 100px; height: 100px; border-radius: 50%; object-fit: cover;" %>
            <% else %>
              <i class="fa-solid fa-paw" style="font-size: 80px; color: rgba(255,255,255,0.5);"></i>
            <% end %>
          </div>
          <div class="name-section">
            <h2 class="mb-0"><%= link_to pet.name, user_pet_path(current_user, pet) %></h2>
          </div>
          <div class="action-section">
            <ul class="list-inline mb-0">
              <li class="list-inline-item">
                <%= link_to unarchive_user_pet_path(current_user, pet),data: { turbo_method: :patch, turbo_confirm: "Restore #{pet.name}?" } do %>
                  <h3><i class="fa-solid fa-arrow-rotate-left"></i></h3>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>Your Heart Gallery is empty</p>
  <% end %>
</div>
